@require('shoelace-ui-media-queries')

.autosearch
  position relative
  .select-box
    input
      -webkit-appearance none
      margin 0
      padding 0
      border 1px solid #ccc
      height 1.5em

  &.open
    +screenSizeBelow('laptop')
      position fixed
      top 0
      right 0
      left 0

      .select-box
        position absolute
        top 0
        right 0
        left 0
        height 2em
        background-color #0008

        input
          display block
          height 2em
          margin 0.5em auto
          border none
          padding 0 0.25em
          width 80%

      .select-dropdown
        position fixed
        top 2em
        right 0
        bottom 0
        left 0
        overflow-x hidden
        overflow-y auto

  .select-options
    .select-option
      &.highlighted
        background-color blue
      &.selected
        background-color red
